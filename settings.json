{
  // editor
  "editor.fontSize": 19,
  "editor.fontFamily": "Fira Code, Operator Mono",
  "editor.fontLigatures": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  // cursor
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "expand",

  // Code formatting settings
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.tslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "eslint.alwaysShowStatus": true,
  "[javascript]": {
    // ! this one
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnType": true,
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    // ! this one
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnType": true,
    "editor.formatOnSave": true
  },
  //terminal
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.fontFamily": "Fira Code, Operator Mono",
  "workbench.iconTheme": "material-icon-theme",
  // terminal customization
  "workbench.colorCustomizations": {
    "terminal.background": "#1D2021",
    "terminal.foreground": "#A89984",
    "terminalCursor.background": "#A89984",
    "terminalCursor.foreground": "#A89984",
    "terminal.ansiBlack": "#1D2021",
    "terminal.ansiBlue": "#0D6678",
    "terminal.ansiBrightBlack": "#665C54",
    "terminal.ansiBrightBlue": "#0D6678",
    "terminal.ansiBrightCyan": "#8BA59B",
    "terminal.ansiBrightGreen": "#95C085",
    "terminal.ansiBrightMagenta": "#8F4673",
    "terminal.ansiBrightRed": "#FB543F",
    "terminal.ansiBrightWhite": "#FDF4C1",
    "terminal.ansiBrightYellow": "#FAC03B",
    "terminal.ansiCyan": "#8BA59B",
    "terminal.ansiGreen": "#95C085",
    "terminal.ansiMagenta": "#8F4673",
    "terminal.ansiRed": "#FB543F",
    "terminal.ansiWhite": "#A89984",
    "terminal.ansiYellow": "#FAC03B"
  },
  "editor.inlineSuggest.enabled": true, // ! this one
  /**************************************************/
  /* chat-gpt */

  "editor.insertSpaces": true, // use spaces instead of tabs for indentation
  // "editor.renderWhitespace": "all", // show all whitespace characters, including spaces and tabs
  "files.autoSave": "onFocusChange", // automatically save files when switching focus
  "files.trimTrailingWhitespace": true, // automatically remove trailing whitespace when saving
  "files.insertFinalNewline": true,
  "workbench.startupEditor": "none", // ensure that the file ends with a newline
  // Custom settings
  "files.exclude": {
    "**/node_modules": true
  },
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false
  },
  "javascript.updateImportsOnFileMove.enabled": "always", // ! this one
  "git.openRepositoryInParentFolders": "never",
  "git.suggestSmartCommit": false,
  "vscode-edge-devtools.webhintInstallNotification": true,
  "editor.guides.bracketPairs": true,
  "explorer.confirmDelete": false,
  "workbench.colorTheme": "Learn with Sumit Official Theme",
  "terminal.integrated.env.linux": {},
  "console-ninja.featureSet": "Community",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "tabnine.experimentalAutoImports": true,
  "cSpell.userWords": ["MERN", "salesinfo", "Satkhira"],
  "liveServer.settings.donotShowInfoMsg": true,
  "tailwind-fold.autoFold": true,
  // "tailwind-fold.foldedText": "...",
  "tailwind-fold.foldStyle": "QUOTES",
  "tailwind-fold.showTailwindImage": false,
  // "tailwind-fold.foldedTextColor": "violate",
  "tailwind-fold.foldedTextBackgroundColor": "transparent",
  "git.autofetch": true,
  "window.zoomLevel": 1
}
